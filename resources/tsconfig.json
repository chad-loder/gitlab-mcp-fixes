{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../build/resources",
    "rootDir": "./",
    "allowJs": true,
    "resolveJsonModule": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["./**/*.ts", "./**/*.mjs"],
  "exclude": ["node_modules", "../build"]
}
